<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpentTimeInToiletMoreThan60">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="65dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoclock" />

    <TextView
        android:id="@+id/et_notify119"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#000"
        android:fontFamily="@font/gmarketsansttflight"
        android:gravity="center"
        android:padding="30dp"
        android:text="TextView"
        android:textColor="#FFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

    <TextView
        android:id="@+id/et_toiletTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tttogether"
        android:text="60분"
        android:textColor="#D80404"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_notify119"
        app:layout_constraintVertical_bias="0.078" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:fontFamily="@font/gmarketsansttflight"
        android:gravity="center"
        android:text="을 초과하였습니다."
        android:textColor="#000"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonNotEmergency"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_toiletTime" />

    <Button
        android:id="@+id/buttonNotEmergency"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#000"
        android:fontFamily="@font/gmarketsansttflight"
        android:text="응급상황이 아닙니다."
        android:textSize="14dp"
        app:backgroundTint="#E10000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_toiletTime" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/gmarketsansttflight"
        android:text="0-30분: 안전"
        android:textColor="#3F51B5"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/gmarketsansttflight"
        android:text="30-60분: 응급상황 우려"
        android:textColor="#F2CA50"
        android:textSize="11dp"
        app:layout_constraintBottom_toTopOf="@+id/textView24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarketsansttflight"
        android:text="60분 초과: 응급상황 의심"
        android:textColor="#F80505"
        android:textSize="11dp"
        app:layout_constraintBottom_toTopOf="@+id/textView24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/gmarketsansttflight"
        android:gravity="center"
        android:text="30분 초과, 60분 초과 시 알림이 전송되며,\n\n60분 초과 후 사용자가 어플 내에서 \n\n\'5분 이내\'에 응답하지 않을 시 \n\n자동으로 응급 신고가 접수됩니다."
        android:textColor="#000"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>