<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/et_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000"
            android:layout_marginTop="50dp"
            android:textSize="12dp"
            android:fontFamily="@font/gmarketsansttflight"/>

        <TextView
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#000"
            android:fontFamily="@font/gmarketsansttflight"
            android:padding="10dp"
            android:text="사용자 정보"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="171dp"
            android:layout_height="148dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/infoimage" />


        <TextView
            android:id="@+id/et_oldNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:backgroundTint="#F2DC99"
            android:text="노약자 성명🧓"
            android:layout_gravity="center"
            android:textColor="#000"
            android:layout_marginTop="40dp"
            android:textSize="15dp"
            android:fontFamily="@font/gmarketsansttflight"/>

        <EditText
            android:id="@+id/et_oldName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/gmarketsansttflight"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/et_oldGenderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노약자 성별♀♂"
            android:background="@drawable/button_background"
            android:backgroundTint="#F2DC99"
            android:layout_marginTop="40dp"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:fontFamily="@font/gmarketsansttflight"/>
        <EditText
            android:id="@+id/et_oldGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="15dp"
            android:textColor="#000"
            android:fontFamily="@font/gmarketsansttflight"/>


        <TextView
            android:id="@+id/et_oldBirthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노약자 생년월일🗓"
            android:background="@drawable/button_background"
            android:backgroundTint="#F2DC99"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="#000"
            android:fontFamily="@font/gmarketsansttflight"/>

        <EditText
            android:id="@+id/et_oldBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="#000"
            android:fontFamily="@font/gmarketsansttflight"/>


        <TextView
            android:id="@+id/et_oldPhonenumberTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노약자 전화번호☎"
            android:background="@drawable/button_background"
            android:backgroundTint="#F2DC99"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="#000"
            android:fontFamily="@font/gmarketsansttflight"/>

        <EditText
            android:id="@+id/et_oldPhonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:fontFamily="@font/gmarketsansttflight"/>

        <TextView
            android:id="@+id/et_oldLocateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노약자 자택주소🏠️"
            android:background="@drawable/button_background"
            android:backgroundTint="#F2DC99"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="40dp"
            android:textColor="#000"
            android:fontFamily="@font/gmarketsansttflight"/>

        <EditText
            android:id="@+id/et_oldLocate"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="#000"
            android:fontFamily="@font/gmarketsansttflight"/>

        <TextView
            android:id="@+id/et_PhonenumberTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보호자 전화번호📱"
            android:background="@drawable/button_background"
            android:backgroundTint="#F2DC99"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="40dp"
            android:textColor="#000"
            android:fontFamily="@font/gmarketsansttflight"/>
        <EditText
            android:id="@+id/et_Phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="#000"
            android:fontFamily="@font/gmarketsansttflight"
            android:layout_marginBottom="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/gmarketsansttflight"
            android:textColor="#000"
            android:text="내용을 변경하고 수정하기 버튼을 누르면 \n\n계정 정보가 수정됩니다."
            />

        <Button
            android:id="@+id/btn_myinfo"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/gmarketsansttflight"
            android:gravity="center|center_vertical"
            android:text="수정하기"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#fff"
            android:textSize="18dp"
            app:backgroundTint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.247" />


    </LinearLayout>
</ScrollView>